# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Atlas Connection
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/<database-name>?retryWrites=true&w=majority

# Better Auth Configuration
BETTER_AUTH_SECRET=<generate-a-secure-random-string>
BETTER_AUTH_URL=http://localhost:3000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Stripe Configuration (use test keys for development)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Optional: OAuth (leave blank if not using)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Flutter CORS (set to false for web frontend)
USE_FLUTTER_CORS=false